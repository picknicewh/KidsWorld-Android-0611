<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hunme.status">
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.PublishStatusActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ChoosePermitActivity"
            android:screenOrientation="portrait"/>
        <PreferenceScreen
                android:title="@string/radio_controls_title"
                 android:summary="@string/radio_controls_summary">
                  <intent
                       android:action="android.intent.action.MAIN"
                       android:targetPackage="com.android.settings"
                       android:targetClass="com.android.settings.WirelessSettings" />
        </PreferenceScreen>

</application>

</manifest>