<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:paddingRight="@dimen/space"
        android:paddingLeft="@dimen/space_x2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <net.hunme.baselibrary.widget.CircleImageView
            android:id="@+id/iv_left"
            android:src="@mipmap/ic_test01"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:id="@+id/ll_classchoose"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/space"
            android:text="苗苗班"
            android:textColor="@color/white"
            android:id="@+id/tv_classname"
            android:textSize="@dimen/ts_xx_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_popdown"
            android:id="@+id/iv_popdown"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        </LinearLayout>

        <ImageView
            android:padding="@dimen/space"
            android:id="@+id/iv_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_new_message"/>
    </RelativeLayout>
    <include
        android:id="@+id/ll_loading"
        layout="@layout/loadwebview"/>
   <net.hunme.baselibrary.widget.MyViewView
       android:id="@+id/wv_status"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>