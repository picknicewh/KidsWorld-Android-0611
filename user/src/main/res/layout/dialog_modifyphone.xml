<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fillet_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入你的密码"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_xx_large"
        android:gravity="center"
        android:padding="@dimen/space"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注：账号登录密码"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_medium"
        android:gravity="center" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_dg_password"
        android:padding="@dimen/space"
        android:background="@drawable/password_selecter"
        android:layout_margin="@dimen/space_x2"
        android:hint="请输入你的密码"
        android:textSize="@dimen/ts_medium"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_xx_large"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_dg_cancel"
            android:textSize="@dimen/ts_x_large"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_green"
            android:text="取消"
            />

        <View
            android:layout_width="@dimen/line_gray"
            android:layout_height="match_parent"
            android:background="@color/line_gray"
            />

        <Button
            android:background="#00000000"
            android:id="@+id/bt_dg_conform"
            android:textSize="@dimen/ts_x_large"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_green"
            android:text="确认"
            />
    </LinearLayout>
</LinearLayout>