<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_x2.5"
        android:background="@drawable/bg_pop_share"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pop_share"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_x2"
            android:paddingRight="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/space"
                android:text="分享到动态"
                android:textColor="@color/theme_text"
                android:textSize="@dimen/ts_x_large" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space"
                android:text="这里是文字" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_gray"
            android:background="@color/line_divide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_concel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/space_x1.5"
                android:paddingTop="@dimen/space_x1.5"
                android:text="取消"
                android:textSize="@dimen/ts_large" />

            <View
                android:layout_width="@dimen/line_gray"
                android:layout_height="match_parent"
                android:background="@color/line_divide" />

            <TextView
                android:id="@+id/tv_conform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/space_x1.5"
                android:paddingTop="@dimen/space_x1.5"
                android:text="发送"
                android:textColor="@color/main_green"
                android:textSize="@dimen/ts_large" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>