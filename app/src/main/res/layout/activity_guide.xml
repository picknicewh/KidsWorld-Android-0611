<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_bg"
    android:visibility="gone">

    <net.hongzhang.baselibrary.widget.BannerViewPager
        android:id="@+id/bvp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_guide1"
        android:flipInterval="5000"
        android:inAnimation="@anim/page_left_in"
        android:outAnimation="@anim/page_left_out"
        android:persistentDrawingCache="animation"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_gohead"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_x2"
        android:layout_marginTop="@dimen/space_x3"
        android:background="@drawable/gohead_bg"
        android:gravity="center"
        android:text="跳过"
        android:textColor="@color/main_text_green"
        android:textSize="@dimen/ts_large" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/space_x0.5">

        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/ib_goto"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_above="@id/ll_title"
            android:background="@drawable/start_study_bg"
            android:gravity="center"
            android:text="开始学习"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_x_large"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
