<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/harf_white"
        android:paddingTop="@dimen/space_x0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_height"
            android:paddingRight="@dimen/item_height">

            <ImageView
                android:id="@+id/iv_play_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_x2"
                android:src="@mipmap/ic_pause" />
            <SeekBar
                android:id="@+id/sb_video_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/thumb_dos_video"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/space_x0.5"
            android:id="@+id/rv_play_list_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>