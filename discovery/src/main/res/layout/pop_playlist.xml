<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingRight="@dimen/space_x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textColor="@color/sc_"
            android:padding="@dimen/space_x1.5"
            android:id="@+id/tv_list_size"
            android:text="播放列表（0）"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/iv_collect"
            android:layout_centerVertical="true"
            android:src="@mipmap/star_dark"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
   <ListView
       android:dividerHeight="1dp"
       android:divider="@color/line_gray"
       android:id="@+id/lv_song_list"
       android:layout_width="match_parent"
       android:layout_height="200dp"/>
    <View
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:gravity="center"
        android:textColor="@color/sc_"
        android:padding="@dimen/space_x1.5"
        android:id="@+id/tv_list_close"
        android:text="关闭"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>