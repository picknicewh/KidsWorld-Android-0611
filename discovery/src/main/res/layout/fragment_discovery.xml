<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_discovery"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:id="@+id/rl_discovery"
       android:background="@color/colorAccent"
       android:layout_width="match_parent"
       android:layout_height="50dp">
      <ImageView
          android:padding="@dimen/space_x1.5"
          android:layout_alignParentLeft="true"
          android:id="@+id/iv_dleft"
          android:src="@mipmap/ic_history"
          android:layout_centerInParent="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_dtitle"
          android:layout_centerInParent="true"
          android:text="乐园"
          android:textSize="@dimen/ts_xx_large"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <ImageView
          android:padding="@dimen/space_x1.5"
          android:id="@+id/iv_dright"
          android:src="@mipmap/ic_search"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <org.apache.cordova.engine.SystemWebView
          android:id="@+id/cordovaWebView"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </org.apache.cordova.engine.SystemWebView>

      <ProgressBar
          android:id="@+id/pb_web"
          android:layout_width="match_parent"
          android:layout_height="@dimen/space_x0.5"
          android:max="100"
          android:background="@drawable/progress_bar_states"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
   </RelativeLayout>


</LinearLayout>