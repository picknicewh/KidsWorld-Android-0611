<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="TextStyleBase">
        <item name="android:textColor">@color/sc_</item>
        <item name="android:textSize">@dimen/ts_large</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/ic_dialog_bg_</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">108dip</item>
        <item name="android:maxHeight">104dip</item>
        <item name="android:indeterminateDrawable">@drawable/wb_loading_frame</item>
        <item name="android:minWidth">108dip</item>
        <item name="android:minHeight">104dip</item>
    </style>

    <style name="LoadingDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_self</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>
    <style name="myActivityRadio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/space</item>
        <item name="android:paddingTop">@dimen/space</item>
        <item name="android:paddingLeft">@dimen/space_x2</item>
        <item name="android:paddingRight">@dimen/space_x2</item>
        <item name="android:background">@drawable/bg_activity_radio_btn</item>
        <item name="android:textColor">@drawable/rb_active_text_color</item>
    </style>
    <style name="rbActiveS">
        <item name="android:paddingLeft">@dimen/space_x2</item>
        <item name="android:paddingRight">@dimen/space_x2</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/rb_active_text_color_s</item>
    </style>
    <style name="myActiveProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:progressDrawable">@drawable/bg_progress_bar</item>
        <item name="android:maxHeight">@dimen/space</item>
        <item name="android:minHeight">@dimen/space</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
