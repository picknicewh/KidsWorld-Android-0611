<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space"
        android:text="选择日期和时间"
        android:textColor="@color/blue"
        android:background="@color/white"
        android:textSize="@dimen/ts_large" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:stretchColumns="*" >

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_up" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_up" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_up" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_up" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_up" />
        </TableRow>

        <TableRow>

            <net.hongzhang.baselibrary.widget.wheel.NumericWheelView
                android:id="@+id/wv_year"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wheel" />

            <net.hongzhang.baselibrary.widget.wheel.NumericWheelView
                android:id="@+id/wv_month"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wheel" />

            <net.hongzhang.baselibrary.widget.wheel.NumericWheelView
                android:id="@+id/wv_day"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wheel" />

            <net.hongzhang.baselibrary.widget.wheel.NumericWheelView
                android:id="@+id/wv_hour"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wheel" />

            <net.hongzhang.baselibrary.widget.wheel.NumericWheelView
                android:id="@+id/wv_minute"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wheel" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@mipmap/ic_picker_arrow_down" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/b_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="取消"
            android:textColor="@drawable/selete_blue"
            android:textSize="@dimen/ts_large" />

        <View
            android:layout_width="@dimen/line_gray"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <Button
            android:id="@+id/b_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="确定"
            android:textColor="@drawable/selete_blue"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>

</LinearLayout>