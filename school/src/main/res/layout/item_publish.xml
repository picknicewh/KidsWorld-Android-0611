<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <net.hunme.baselibrary.widget.CircleImageView
        android:layout_margin="@dimen/space"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/lv_holad" />

    <RelativeLayout
        android:layout_marginRight="@dimen/space"
        android:layout_marginTop="@dimen/space"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_x_large"
          />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:textSize="@dimen/ts_medium"
            android:layout_alignParentRight="true"/>


        <TextView
            android:layout_marginTop="@dimen/space_x0.5"
            android:layout_below="@+id/tv_title"
            android:textColor="@color/black"
            android:id="@+id/tv_ptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_x_large"
           />

    </RelativeLayout>
        </LinearLayout>
    <TextView
        android:paddingLeft="@dimen/space"
        android:paddingRight="@dimen/space"
        android:id="@+id/tv_content"
        android:layout_marginTop="@dimen/space_x0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_large"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/tv_title"/>
</LinearLayout>