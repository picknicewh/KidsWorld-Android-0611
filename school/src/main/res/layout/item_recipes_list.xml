<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/infor_et_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_x0.5"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginBottom="@dimen/space">

        <TextView
            android:id="@+id/tv_food_time"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/space_x2"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_text"
            android:textSize="@dimen/ts_xx_large"
            android:text="早餐" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:id="@+id/tv_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ts_large"
                android:text="包子，面条，粥，牛奶" />
            <RelativeLayout
                android:paddingTop="@dimen/space_x0.5"
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>