<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fillet_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定删除这条课程吗？"
        android:textColor="#494949"
        android:textSize="@dimen/ts_x_large"
        android:gravity="center"
        android:padding="@dimen/space_x2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_xx_large"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel"
            android:textSize="@dimen/ts_x_large"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_green"
            android:text="取消" />

        <View
            android:layout_width="@dimen/line_gray"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <Button
            android:background="#00000000"
            android:id="@+id/bt_conform"
            android:textSize="@dimen/ts_x_large"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_green"
            android:text="确认"
            />
    </LinearLayout>
</LinearLayout>