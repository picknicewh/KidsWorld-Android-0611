<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:padding="@dimen/space_x2"
      android:layout_height="wrap_content">
      <TextView

          android:layout_weight="2"
          android:text="姓名"
          android:textSize="@dimen/ts_large"
          android:layout_width="0dp"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tv_name"
          android:layout_weight="1"
          android:textColor="@color/sc_"
          android:layout_width="0dp"
          android:textSize="@dimen/ts_large"
          android:gravity="right"
          android:text="王小二"
          android:layout_height="wrap_content" />
  </LinearLayout>
    <View
        android:background="@color/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:id="@+id/ll_istarttime"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/space_x2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="开始时间"
            android:textSize="@dimen/ts_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_istarttime"
            android:layout_weight="2"
            android:text="2016-07-13 11:30"
            android:textColor="@color/sc_"
            android:layout_width="0dp"
            android:textSize="@dimen/ts_large"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/space_x2"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"/>
    <LinearLayout
        android:id="@+id/ll_iendtime"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/space_x2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="结束时间"
            android:textSize="@dimen/ts_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_iendtime"
            android:layout_weight="2"
            android:text="2016-07-13 11:30"
            android:textColor="@color/sc_"
            android:layout_width="0dp"
            android:textSize="@dimen/ts_large"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/space_x2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:text="用餐"
            android:textSize="@dimen/ts_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_weight="1"
            android:text="不用餐"
            android:textColor="@color/sc_"
            android:layout_width="0dp"
            android:textSize="@dimen/ts_large"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <EditText
        android:id="@+id/et_cause"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_x2"
        android:hint="请假事由"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>