<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hongzhang.school.activity.TaskDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动标题"
            android:textColor="@color/theme_text"
            android:textSize="@dimen/ts_x_large"
            android:layout_marginBottom="@dimen/space"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="老师，这个是小孩完成的作业，请注意查收，老师，这个是小孩完成的作业，请注意查收，老师，这个是小孩完成的作业，请注意查收，老师，这个是小孩完成的作业，请注意查收，老师，这个是小孩完成的作业，请注意查收，"
            android:textColor="@color/minor_text"
            android:layout_marginBottom="@dimen/space"/>

        <RelativeLayout
            android:id="@+id/rl_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_marginTop="@dimen/space_x2"
            android:background="@color/main_green"
            android:padding="@dimen/space"
            android:gravity="center"
            android:text="点评"
            android:textSize="@dimen/ts_large"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
