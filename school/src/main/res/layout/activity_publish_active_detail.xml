<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hongzhang.school.activity.TaskDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:text="活动标题"
            android:textColor="@color/theme_text"
            android:textSize="@dimen/ts_x_large" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:textColor="@color/minor_text" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_picture"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:background="@color/bg_layout"
            android:paddingBottom="@dimen/space_x0.5"
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space"
            android:paddingTop="@dimen/space_x0.5"
            android:text="1小时前" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_x3"
            android:background="@color/line_divide" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x2"
            android:layout_marginLeft="@dimen/space_x3"
            android:layout_marginRight="@dimen/space_x3"
            android:background="@drawable/bg_active_comment"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="点评"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>
</ScrollView>
