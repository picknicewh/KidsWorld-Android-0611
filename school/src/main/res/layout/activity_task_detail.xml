<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="net.hongzhang.school.activity.TaskDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:orientation="vertical"
        android:padding="@dimen/space">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动标题"
            android:textColor="@color/theme_text"
            android:textSize="@dimen/ts_x_large" />

        <LinearLayout
            android:id="@+id/ll_invest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维度考察："
                android:textColor="@color/theme_text"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="习惯 | 思维"
                android:textColor="@color/theme_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x0.5"
            android:text="这里是展示活动的内容这里是展示活动的内容这里是展示活动的内容这里是展示活动的内容这里是展示活动的内容这里是展示活动的内容"
            android:textColor="@color/minor_text" />
<!--
        <RelativeLayout
            android:id="@+id/rl_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_picture"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_enclosure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_conform_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否需要评价活动？"
                android:textColor="@color/theme_text"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_conform_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textColor="@color/theme_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间："
                android:textColor="@color/theme_text"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年4月19日 9:00"
                android:textColor="@color/theme_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间："
                android:textColor="@color/theme_text"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年4月19日 9:00"
                android:textColor="@color/theme_text" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
