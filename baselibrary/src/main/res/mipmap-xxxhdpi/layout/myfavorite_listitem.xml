<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="6dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/f_favorite_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/selector_music_btn"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:paddingLeft="6dp"
        android:src="@drawable/icon_favorite_on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/f_musicname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="标题"
            android:textSize="15sp" />
          <ImageView
              android:id="@+id/f_playstate_iv"
              android:layout_width="15dip"
              android:layout_height="15dip"
              android:layout_marginBottom="-4dip"
              android:visibility="gone"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent">
              <TextView
                  android:id="@+id/f_artist_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8.0dip"
                  android:textColor="@color/white"
                  android:text="歌手"
                  android:textSize="12sp" />
              <TextView
                  android:text="时长"
                  android:id="@+id/f_duration_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8.0dip"
                  android:textColor="@color/white"
                  android:layout_alignParentRight="true"
                  android:textSize="12sp" />
          </RelativeLayout>
       </LinearLayout>

