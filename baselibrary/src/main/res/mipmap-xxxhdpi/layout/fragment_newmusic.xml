<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/bg_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/net_search_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@mipmap/seek"
        android:layout_marginLeft="5dp"
        />
    <AutoCompleteTextView
        android:id="@+id/net_search_edittext"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:hint="搜索你要查找的歌曲"
        android:singleLine="true"
        android:textSize="14dp"
        android:background="@drawable/bg_my_search_edittext"/>
    <ImageButton
        android:id="@+id/net_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/close"
        android:scaleType="fitXY"
        android:background="@color/tans"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"/>
        </LinearLayout>

    <main.mymusic.util.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->

        <main.mymusic.util.PullableListView
            android:id="@+id/net_xlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/harfwhite"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:listSelector="@color/tans"
            android:scrollingCache="true"
            android:groupIndicator="@null"
            android:layout_weight="1" />

        <include layout="@layout/load_more" />
    </main.mymusic.util.PullToRefreshLayout>

