<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/localmusic_bg"
    android:id="@+id/bg"
    tools:context="main.mymusic.activity.TableHostActivity">

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/half_transparent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/rb_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab1"
            android:gravity="center"
            android:text="本地音乐"
            android:textColor="@color/rb_textcolor" />

        <RadioButton
            android:id="@+id/rb_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab2"
            android:gravity="center"
            android:text="网络音乐"
            android:textColor="@color/rb_textcolor" />

        <RadioButton
            android:id="@+id/rb_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab4"
            android:gravity="center"
            android:text="下载管理"
            android:textColor="@color/rb_textcolor" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"/>
     <LinearLayout
        android:id="@+id/tab_showplay"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/half_transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ibtn_player_albumart"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/pic"
            android:scaleType="centerCrop" />
         <LinearLayout
            android:id="@+id/ll_list_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <main.myplaymusic.widget.AlwaysMarqueeTextView
                android:id="@+id/tv_player_singer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="歌手"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textSize="12dp" />
             <main.myplaymusic.widget.AlwaysMarqueeTextView
                android:id="@+id/tv_player_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="歌曲名"
                android:textColor="@android:color/white"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tv_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
            </LinearLayout>

             <ImageView
                 android:id="@+id/tab_play"
                 android:layout_width="30dp"
                 android:layout_height="30dp" />
              <ImageView
             android:id="@+id/tab_next"
             android:src="@mipmap/player_next"
             android:layout_width="30dp"
             android:layout_height="30dp"
                  android:layout_marginLeft="20dp"/>
         <View
             android:background="@color/white"
             android:layout_width="0.5dp"
             android:layout_height="65dp"
             android:layout_marginLeft="30dp"/>
         <ImageView
             android:id="@+id/tab_sliding"
             android:src="@mipmap/icon_items"
             android:layout_width="30dp"
             android:layout_marginLeft="10dp"
             android:layout_height="30dp"
            />
    </LinearLayout>
</LinearLayout>