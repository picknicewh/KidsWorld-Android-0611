<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout"
    android:orientation="vertical">
    <TextView
        android:visibility="visible"
        android:id="@+id/tv_type"
        android:textSize="@dimen/ts_x_large"
        android:layout_margin="@dimen/space_x2"
        android:textColor="@color/minor_text"
        android:text="我们将发送短信验证码到你的手机"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/minor_text"
        android:layout_marginLeft="@dimen/space_x2"
        android:text="+86 13735484622"
        android:id="@+id/tv_cp_number"
        android:layout_width="match_parent"
        android:textSize="@dimen/ts_x_large"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_marginRight="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <EditText
        android:layout_weight="1.5"
        android:background="@drawable/password_selecter"
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x2"
        android:padding="@dimen/space_x1.5"
        android:id="@+id/et_heckNumber"
        android:layout_width="0dp"
        android:hint="请输入你的验证码"
        android:textColor="@color/minor_text"
        android:inputType="phone"
        android:textColorHint="@color/minor_text"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_checkcode"
            android:layout_weight="1"
           android:layout_marginTop="@dimen/space"
            android:background="@drawable/conform_selecter"
            android:text="获取验证码"

            android:textSize="@dimen/ts_x_large"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:layout_marginTop="@dimen/space"
        android:background="@drawable/password_selecter"
        android:id="@+id/et_password"
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x2"
        android:padding="@dimen/space_x1.5"
        android:layout_width="match_parent"
        android:hint="请输入你的新密码"
        android:textColor="@color/minor_text"
        android:textColorHint="@color/minor_text"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="@dimen/space_x2"
        android:id="@+id/b_finish"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_xx_large"
        android:background="@drawable/conform_selecter"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:padding="@dimen/space"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_x0.5"
        android:text="获取验证码"
        android:textColor="@color/theme_green"
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:textSize="@dimen/ts_x_large"
        android:layout_height="wrap_content" />
</LinearLayout>
