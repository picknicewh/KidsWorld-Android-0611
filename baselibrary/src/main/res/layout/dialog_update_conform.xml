<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/fillet_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_x2">
        <TextView
            android:padding="@dimen/space_x2"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="已检查到最新的版本，是否要更新最新版本？"
            style="@style/TextStyleBase"
            android:gravity="center"
            />
        <View
            android:background="@color/line_divide"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:background="#00000000"
                android:id="@+id/btn_cancel"
                android:textSize="@dimen/ts_x_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_text_green"
                android:text="退出"
                />
            <View
                android:background="@color/line_divide"
                android:layout_height="match_parent"
                android:layout_width="@dimen/line_gray"/>
            <Button
                android:layout_gravity="center"
                android:background="#00000000"

                android:id="@+id/btn_conform"
                android:textSize="@dimen/ts_x_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_text_green"
                android:text="确认"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>