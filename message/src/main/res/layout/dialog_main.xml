<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fillet_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="张强"
        android:id="@+id/tv_mainname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/main_text_green"
        android:textSize="@dimen/ts_x_large"
        android:gravity="center"
        android:padding="@dimen/space_x2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />
    <TextView
        android:id="@+id/tv_maintop"
        android:textColor="@color/theme_text"
        android:padding="@dimen/space"
        android:textSize="@dimen/ts_x_large"
        android:gravity="center"
        android:text="置顶改会话框"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />
    <TextView
        android:id="@+id/tv_mainremove"
        android:textColor="@color/theme_text"
        android:padding="@dimen/space"
        android:gravity="center"
        android:text="从会话列表中移除"
        android:textSize="@dimen/ts_x_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>